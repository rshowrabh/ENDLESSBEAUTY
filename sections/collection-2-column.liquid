{%- style -%}
  .section-{{ section.id }}-padding {
  padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
  }

  @media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  }
{%- endstyle -%}
<style>
    /* Two column Gallary CSS */

#two-column-gallary .box{
    display: flex;
    flex-direction:row;
    flex-wrap: wrap;
    justify-content:space-between;
    align-items:center;
    gap: 10px;
}

.image{
    display: block;
    max-width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
    z-index: -1;
    transition: 0.5s all ease-in-out; 
}
.image img{
    height: inherit;
    max-width: 100%;
    object-fit: cover;
    object-position: center center;
    transition: 0.5s all ease-in-out; 
}
.overlay::after{
    content: ""; 
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(0, 0, 0);
    opacity: .1;
}
/* .overlay-hover::after{
    content: ""; 
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgb(0, 0, 0);
    opacity: 0;
    z-index: 99;
}
.item:hover .overlay-hover::after{
    opacity: .1;
} */
.overlay-hover::before{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255,255,255,.5);
    content: "";
    -webkit-transition: all .6s;
    transition: all .6s;
    z-index: 2;
    -webkit-transform: scale3d(1.2,1.1,1) rotate3d(0,0,1,-45deg) translate3d(0,-120%,0);
    transform: scale3d(1.2,1.1,1) rotate3d(0,0,1,-45deg) translate3d(0,-120%,0);
}
.item:hover .overlay-hover::before{
    -webkit-transform: scale3d(1.2,1.1,1) rotate3d(0,0,1,-45deg) translate3d(0,120%,0);
    transform: scale3d(1.2,1.1,1) rotate3d(0,0,1,-45deg) translate3d(0,120%,0);
    opacity: 1;
}


#two-column-gallary .item .text{
    position: absolute;
}

#two-column-gallary .item{
    position: relative;
    overflow: hidden;
    transition: 0.5s all ease-in-out; 
    height: 400px; 
    cursor: pointer;
}
#two-column-gallary .box .item:nth-child(1),#two-column-gallary .box .item:nth-child(2) {
    flex: 1 1 48%;
}
#two-column-gallary .box .item:nth-child(3),#two-column-gallary .box .item:nth-child(4),#two-column-gallary .box .item:nth-child(5) {
    flex: 1 1 32%;
}
#two-column-gallary .item:hover .image{
    transform: scale(1.3);
    transition: 0.5s all ease-in-out; 
}
#two-column-gallary .item .text h2{
    font-size: 30px;
}
#two-column-gallary .box.two .item .text h2{
    word-spacing: 100vW;
    font-size: 45px;
}
.underline{
    border-bottom: 2px solid #000;
    padding-bottom: 3px;
    text-decoration: none;
    font-size: 12px;
    font-weight: 600;
    color: #000;
}
.underline:hover{
    color: #0ec1ae;
    border-bottom: 2px solid #0ec1ae;
}
#two-column-gallary .box.two .item .underline{
    font-size: 14px;
}


/* Responsive Mobile */

@media only screen and (max-width: 767px) {
    #two-column-gallary .item,#two-column-gallary .box > * {
        flex: 1 1 100% !important;
        height: 330px;
    }
  }
</style>

<div id="two-column-gallary" class="color-{{ section.settings.color_scheme }} gradient isolate">
  <div class="section-{{ section.id }}-padding page-width">
    <div class="box">
      {% for block in section.blocks %}
        <div class="item item1" onclick="window.location.href = 'http://example.com';">
          <div class="text" style="left:{{block.settings.text_position_left}}%;bottom:{{block.settings.text_position_bottom}}%">
            <h2 style="word-spacing:{{block.settings.word_break}};">{{ block.settings.heading }}</h2>
            <a class="underline" href="{{block.settings.button_link}}">{{ block.settings.button_label }}</a>
          </div>
          <div class="image overlay-hover">
            {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | image_url }}" alt="">
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
"name": "Collection 2-3",
"tag": "section",
"class": "section",
  "settings": [
    {
    "type": "color_scheme",
    "id": "color_scheme",
    "label": "t:sections.all.colors.label",
    "default": "scheme-1"
    },
    {
    "type": "header",
    "content": "t:sections.all.padding.section_padding_heading"
    },
    {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 40
    },
    {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 52
    }
  ],
"blocks": [
    {
    "type": "column",
    "name": "Add Slide",
    "settings": [
          {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
          },
          {
          "type": "text",
          "id": "heading",
          "label": "Collection Name",
          "default": "Intensive Glow C+ Serum"
          },
          {
          "type": "text",
          "id": "button_label",
          "label": "Button Name",
          "default": "Explore More"
          },
          {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
          },
          {
            "type": "range",
            "id": "text_position_left",
            "label": "Text Position from Left",
            "min" : 0,
            "max" : 100,
            "step": 1,
            "default": 0
          },
          {
            "type": "range",
            "id": "text_position_bottom",
            "label": "Text Position from Bottom",
            "min" : 0,
            "max" : 100,
            "step": 1,
            "default": 0
          },
          {
        "type": "select",
        "id": "word_break",
        "label": "Word Break",
        "default": "initial",
        "options": [
            {
            "label": "No",
            "value": "initial"
            },
            {
            "label": "Yes",
            "value": "100vW"
            
            }
        ]
    }
  ]
 }
],

"presets": [
    {
    "name": "Collection 2-3"
    }
]
}
{% endschema %}
